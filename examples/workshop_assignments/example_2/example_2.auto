Entity:
    name: env_sensor
    type: sensor
    freq: 10
    topic: "bedroom.env"
    broker: issel_cloud_platform
    attributes:
        - temperature: float -> gaussian(10, 20, 5) with noise gaussian(1,1)
        - humidity: float -> linear(1, 0.2) with noise uniform (0, 1)
        - pressure: float -> replay([0.2, 0.2, 0.2, 0.3, 0.25, 0.25, 0.25, 0.2], -1)
